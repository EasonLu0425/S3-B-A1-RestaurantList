<form action="/restaurants/{{restaurant._id}}/edit" method="POST" class="d-flex flex-column m-3">
  <div class="mb-3">
    <label for="name">餐廳名稱：</label>
    <input type="text" placeholder="請輸入餐廳名稱" name="name" id="name" class="mb-1 restaurant-show-title"
      style="width:300px" value="{{restaurant.name}}" required>
  </div>
  <div class="mb-3">
    <label for="name_en">餐廳英文：</label>
    <input type="text" placeholder="請輸入餐廳名稱" name="name_en" id="name_en" class="mb-1 restaurant-show-title"
      style="width:300px" value="{{restaurant.name_en}}">
  </div>
  <div class="mb-3">
    <label for="category">餐廳類別：</label>
    <input type="text" placeholder="請輸入餐廳類別" name="category" id="category" style="width:300px" value="{{restaurant.category}}" required>
  </div>
  <div class="mb-3">
    <label for="location">餐廳地點：</label>
    <input type="text" placeholder="請輸入餐廳地址" name="location" id="location" style="width:300px" value="{{restaurant.location}}" required>
  </div>
  <div class="mb-3">
    <label for="phone">電話：</label>
    <input type="text" placeholder="請輸入電話" name="phone" id="phone" style="width:300px" value="{{restaurant.phone}}" required>
  </div>
  <div class="mb-3">
    <label for="image">網址：</label>
    <input type="text" 請附上餐廳照片網址 id="image" name="image" style="width:500px" value="{{restaurant.image}}" required>
  </div>
  <div class="mb-3">
    <label for="description">簡介：</label>
    <input type="text" 請附上簡介 id="description" name="description"  value="{{restaurant.description}}" required>
  </div>
  <button type="submit" style="width:100px">儲存資料</button>
</form>